@font-face
  font-family NotoSans
  src url('../fonts/NotoSans-Regular.ttf')

body
  margin 0 20px
  font-family 'NotoSans', sans-serif
  font-weight 300

a, a:visited, a:active, a:hover
  text-decoration none
  color black

i
  margin-right 5px
  font-size 25px

table
  margin 5px
  border-spacing 0 5px

td
  border 2px solid hsl(210,9%,94%)
  padding 5px

.td-name
  background-color hsl(210,9%,94%)

.header
  display flex
  flex-direction row
  justify-content space-between

.panel
  display flex
  flex-direction row
  justify-content space-between

.speed
  display flex
  flex-direction row
  justify-content center

.down-btn
  display flex
  flex-direction row

.title
  font-weight 100
  margin-top 5px
  margin-bottom 5px
  i
    font-size 40px

#preloaders
  display flex
  flex-direction column
  max-width 400px
  margin auto
  text-align center

.header, .panel, .speed, .blocks, .footer
  align-items center

.panel, .speed, .blocks
  padding-top 10px

.left, .right
  display flex
  flex-direction row
  margin-left 15px
  margin-right 15px
  font-weight 300

.btn
  display flex
  flex-direction row
  justify-content center
  align-items center
  background-color hsl(210,9%,94%)
  font-size 14px
  padding 5px 12px
  border 1px solid transparent
  border-radius 4px
  border-color hsl(210,9%,94%)
  width 125px
  height 25px
  margin 0 5px
  font-weight 300

.ipt
  border 1px solid transparent
  border-radius 3px
  border-color #ccc
  width 30vw
  padding 6.5px
  margin-right 10px

.blocks
  display flex
  flex-direction row
  justify-content center
  position relative

.block
  display flex
  flex-direction column
  justify-content flex-start
  width 49.5%
  overflow hidden
  word-wrap break-word
  position absolute
  top 10px
  bottom -50vh
  box-shadow 0 4px 6px 0 hsla(0,0%,0%,0.2)

.block-head
  background-color hsl(210,9%,94%)
  text-align center
  padding 5px
  font-weight 300

.block-body
  padding 10px
  overflow auto

.footer
  display flex
  flex-direction row
  justify-content space-between
  position absolute
  bottom 0
  left 0
  right 0
  padding 10px
  .left, .right
    width 300px
  .right
    justify-content flex-end
  img
    padding-top 5px
    height 20px
    &:hover
      cursor pointer

.alert
  display flex
  flex-direction row
  justify-content center
  position absolute
  width 200px
  padding-top 15px
  padding-bottom 15px
  top 10px
  right 10px
  z-index 1
  color white

.alert-success
  background-color #4bc80c
  border-left 3px solid #2f7d07

.alert-warning
  background-color #f4d30f
  border-left 3px solid #fd9900

#file-upload
  display none
